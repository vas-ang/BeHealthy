@model BeHealthy.Web.Dtos.Fitness.ExerciseSteps.InputModels.ExerciseStepCreateInputModel

@{
    ViewData["Title"] = "Create";
}

<form asp-area="Fitness" asp-controller="ExerciseSteps" asp-action="Create" method="post" enctype="multipart/form-data">
    <h1>Create an Exercise Step</h1>
    <hr />
    <div class="form-group">
        <label asp-for="@Model.Heading"></label>
        <input asp-for="@Model.Heading" class="form-control" />
        <span asp-validation-for="@Model.Heading" class="text-danger"></span>
    </div>
    <p>Image</p>
    <div class="custom-file">
        <input asp-for="@Model.ImageUpload" class="custom-file-input">
        <label asp-for="@Model.ImageUpload" class="custom-file-label">Choose image...</label>
        <span asp-validation-for="@Model.ImageUpload" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <input asp-for="@Model.Description" class="form-control" />
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>

    <input asp-for="@Model.ExerciseId" hidden>

    <a class="btn btn-danger float-left" asp-area="Fitness" asp-controller="Exercises" asp-action="Details" asp-route-exerciseId="@Model.ExerciseId">Cancel</a>
    <button type="submit" class="btn btn-success float-right">Create</button>
</form>